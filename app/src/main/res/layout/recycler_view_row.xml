<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/Iv_image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/noimage"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/Tx_title"
            android:text="타이틀 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:layout_marginTop="10dp"
            android:textColor="#0e0e0e"
            />
        <LinearLayout
            android:id="@+id/Layout_AuthorPublisher"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="vertical"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/Tx_bcauthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                />
            <TextView
                android:id="@+id/Tx_bcpublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Tx_writeday"
                android:text="등록 날짜 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                />
            <TextView
                android:id="@+id/Tx_lifetime"
                android:text="삭제까지 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="#fa2c2c"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/Tx_userprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : "
                android:textColor="#ff8ee7"
                android:textSize="40px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Tx_bcprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : "
                android:textColor="#c9c6c6"
                android:textSize="30px"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Tx_bcdiscountprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : "
                android:textColor="#c9c6c6"
                android:textSize="30px"
                android:visibility="invisible"

                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="#898888"/>

</LinearLayout>