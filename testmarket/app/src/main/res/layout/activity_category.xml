<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:gravity="center_vertical"
        android:textSize="70px"
        android:text="카테고리를 선택하세요."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:textSize="60px"
        android:text="중고거래"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/book"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:gravity="center_vertical"
                android:textSize="50px"
                android:text="도서/티켓/음반"/>
            <TextView
                android:id="@+id/digital"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="디지털/가전"/>

            <TextView
                android:id="@+id/female_fashion"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="여성의류/잡화"/>
            <TextView
                android:id="@+id/gita"
                android:layout_width="match_parent"
                android:layout_height="80px"

                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="기타 중고물품"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/game"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="게임/취미"/>

            <TextView
                android:id="@+id/beauty"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="뷰티/미용"/>
            <TextView
                android:id="@+id/male_fashion"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="남성의류/잡화"/>
            <TextView
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="삽니다."/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:textSize="60px"
        android:text="광고"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="방 비어요~"/>
            <TextView
                android:id="@+id/recruit"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="일 할 사람 구해요~"/>
            <TextView
                android:id="@+id/gwiwei"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="과외/클래스/스터디 모집"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/junci"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="전시/공연/행사"/>

            <TextView
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:textSize="50px"

                android:text="꿀팁소개"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="광고 카테고리 글을 중고카테고리에 올리면 게시물 삭제 및 이용정지 등의 제재를 받을 수 있습니다." />





</LinearLayout>